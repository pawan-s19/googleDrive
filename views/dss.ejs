        <div class="container-fluid px-4 py-3 folderCtn">
          <div>
            <% if(folders.length > 0){ %>
            <h6 class="mb-3">Folders</h6>
            <div class="folderWrapper row row-cols-6 mb-5">
              <%folders.forEach(function(elem){%>
              <div
                data-bs-folderId="<%=elem._id%>"
                class="folderDiv d-flex align-items-center justify-content-start gap-2 py-2 px-2 rounded"
              >
                <i class="ri-folder-5-fill"></i>
                <p title="my cloud" class="m-0"><%=elem.name%></p>
              </div>
              <% })%>
            </div>
            <% }else{ %>
            <div class="folderWrapper text-center">
              <img class="mt-4" style="width: 30vmax;" src="/assets/NoData.webp" alt=""></div>
              <div>
                <p class="ms-3 mb-0 fw-bold text-center">Nothing to Show 😔</p>
                <p class="ms-3 mb-0 fw-semibold text-center">Use "Upload" button to Upload a File or Folder</p>
              </div>
            <% } %>
          </div>
          <%if(files.length>=1){%>
          <h6 class="mb-3">Files</h6>
          <div class="fileWrapper row row-cols-5 px-3 gap-3">
            <%files.forEach(function(elem){%>
            <!-- <%=elem.filename.split("%20")[0]%> -->
            <%let type = elem.filename.split("*")[1].split(".")[1]%>
            <div
              class="fileDiv card mb-3 bg-transparent"
              style="width: 14vmax"
              data-bs-fileId="<%=elem.filename%>"
            >
              <div
                class="fileIconCtn card-body d-flex align-items-center justify-content-center"
              >
                <% if(type === 'png' || type === 'jpg' || type === 'jpeg'){ %>
                <i class="ri-image-2-fill"></i>
                <% } else if(type === 'mp4'){ %>
                <i class="ri-movie-fill"></i>
                <% } else if(type === 'pdf'){ %>
                <i class="ri-file-pdf-fill"></i>
                <% } else if(type === 'docx'){ %>
                <i class="ri-file-word-fill"></i>
                <% } else if(type === 'pptx'){ %>
                <i class="ri-file-ppt-fill"></i>
                <% } else if(type === 'mp3'){ %>
                <i class="ri-file-music-fill"></i>
                <% } %>
              </div>
              <div class="fileFooter p-1 d-flex align-items-end gap-1">
                <% if(type === 'png' || type === 'jpg' || type === 'jpeg'){ %>
                <i class="ri-image-2-fill"></i>
                <% } else if(type === 'mp4'){ %>
                <i class="ri-movie-fill"></i>
                <% } else if(type === 'pdf'){ %>
                <i class="ri-file-pdf-fill"></i>
                <% } else if(type === 'docx'){ %>
                <i class="ri-file-word-fill"></i>
                <% } else if(type === 'mp3'){ %>
                <i class="ri-file-music-fill"></i>
                <% }%>
                <small class="m-0"><%=elem.filename.split("*")[1]%></small>
                <!-- <a href="/share/<%=elem.filename%>">share</a> -->
              </div>
            </div>
            <% })%>
          </div>
          <%} else{ %>
          <div class="fileWrapper"></div>
          <% } %>
        </div>
      </div>
      <!-- bootstrap modal -->

      <div
        class="modal fade"
        id="exampleModal"
        tabindex="-1"
        aria-labelledby="exampleModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">
                New Folder
              </h1>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <form method="post" action="/createfolder">
                <div class="mb-3">
                  <input
                    autofocus
                    type="text"
                    placeholder="untitled name"
                    class="form-control"
                    id="recipient-name"
                    name="foldername"
                  />
                  <input
                    type="text"
                    name="parentId"
                    class="parentId"
                    style="display: none"
                  />
                </div>
                <div class="modal-footer border-0">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-bs-dismiss="modal"
                  >
                    Close
                  </button>
                  <button type="submit" class="btn btn-primary">Create</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>

      <!-- another bootstrap model for sharing files and folders -->
      <div
        class="modal fade"
        id="shareModal"
        tabindex="-1"
        aria-labelledby="shareModalLabel"
        aria-hidden="true"
